// Radius = 5*cm;


// Fixed Parameters


// Dimensions Target Hall

 TargetHall_x = 5*m;
 TargetHall_y = 5*m;
 TargetHall_z = 5*m;

// Dimensions Paraffin Block
// 13inches deep, 6inches wide and high
 ParaffinBlock_x = 15.24/2*m;
 ParaffinBlock_y = 15.24/2*m;
 ParaffinBlock_z = 33.02/2*m;

// Dimensions Aluminum Tubes sourrounding the 3He-Tubes

 innerRadiusOfAlTube = 2.6594/2*cm;
