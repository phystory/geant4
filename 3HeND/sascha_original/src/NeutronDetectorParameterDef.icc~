// Variables Parameters

// Number of Helium-Tubes

  numberTubes= 4;


// Radius of circle described by Helium-Tubes

  Radius = 50.0*cm;


// Fixed Parameters


// Dimensions Target Hall

 TargetHall_x = 5*m;
 TargetHall_y = 5*m;
 TargetHall_z = 5*m;

// Dimensions Paraffin Block

 ParaffinBlock_x = 1*m;
 ParaffinBlock_y = 1*m;
 ParaffinBlock_z = 1*m;

// Dimensions Aluminum Tubes sourrounding the 3He-Tubes

 innerRadiusOfAlTube = 2.6594*cm;
 outerRadiusOfAlTube = 2.7559*cm;
 heightOfAlTube = 12.7*cm;
 startAngleOfAlTube = 0.*deg;
 spanningAngleOfAlTube = 360.*deg;

// Dimension 3-Helium Tubes

 innerRadiusOfHeTube = 0.0*cm;
 outerRadiusOfHeTube = innerRadiusOfAlTube-0.02*cm;
 heightOfHeTube = 12.7*cm;
 startAngleOfHeTube = 0.*deg;
 spanningAngleOfHeTube = 360.*deg;

// Dimensions Outer Beam Pipe

 innerRadiusOfBeamPipeOuter = 5.08*cm;
 outerRadiusOfBeamPipeOuter = 5.715*cm;
 heightOfBeamPipeOuter = ParaffinBlock_z/2;
 startAngleOfBeamPipeOuter = 0.*deg;
 spanningAngleOfBeamPipeOuter = 360.*deg;

// Dimensions Inner Beam Pipe

 innerRadiusOfBeamPipeInner = 0.0*cm;
 outerRadiusOfBeamPipeInner = innerRadiusOfBeamPipeOuter-0.02*cm;
 heightOfBeamPipeInner = ParaffinBlock_z/2;
 startAngleOfBeamPipeInner = 0.*deg;
 spanningAngleOfBeamPipeInner = 360.*deg;

